{
  "extends": "@tsconfig/node12/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "lib": [
      "dom"
    ]
  },
  "exclude": [
    "./src/server"
  ],
  "include": [
    "./src/client",
    "./src/shared"
  ]
}
